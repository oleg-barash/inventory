<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите тип сканирования"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/firstScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTypeButtonClicked"
        android:text="@string/first_scan" />

    <Button
        android:id="@+id/secondScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTypeButtonClicked"
        android:text="@string/second_scan" />

    <Button
        android:id="@+id/blindScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTypeButtonClicked"
        android:text="@string/blind_scan" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:onClick="onOkButtonClicked"
        android:text="ОК"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</LinearLayout>
